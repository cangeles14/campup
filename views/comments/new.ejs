<% include ../partials/header %>

<div class="container" style="margin-top:10rem">
    <h1 style="text-align:center">Add new comment to <%= campground.name %> </h1>
</div>
<div class="container align-items-center mt-5">
    <div style="width: 30%; margin:30px auto;">
        <form action="/campground/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Text">
            </div>
            <div class="form-group">
                <button class="btn-primary btn btn-lg btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campground">Go Back</a>
    </div>
</div>





