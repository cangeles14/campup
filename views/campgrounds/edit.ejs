<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align:center"> Edit <%= campground.name %> </h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input class="form-control" id="name" type="text" name="campground[name]" value="<%= campground.name %>" required>
                </div>
                <div class="form-group">
                    <label for="image">Campground Image</label>
                    <input class="form-control" id="image" type="text" name="campground[image]" value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" id="description" type="text" name="campground[description]" value="<%= campground.description %>" required>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" id="price" type="number" name="campground[price]" value="<%= campground.price %>" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>" required>
                </div>
                <div class="form-group">
                    <button class="btn-primary btn btn-lg btn-default btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campground">Go Back</a>
        </div>
    </div>
</div>

    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDOA3nXp9m9GlDiu4A9gjcLdTglfp3YFO4&libraries=places&callback=activatePlacesSearch"></script>
    <script>
    function activatePlacesSearch () {
        var input = document.getElementById("location");
        var autocomplete = new google.maps.places.Autocomplete(input);
    }
</script>





<% include ../partials/footer %>